<h1>Edit user</h1>

<%= form_for(@user) do |ff| %>
  <%= render 'shared/error_messages', :object => ff.object %>
  <div class="field">
    <%= ff.label :name %><br />
    <%= ff.text_field :name %>
  </div>
  <div class="field">
    <%= ff.label :email %><br />
    <%= ff.text_field :email %>
  </div>
  <div class="field">
    <%= ff.label :password %><br />
    <%= ff.password_field :password %>
  </div>
  <div class="field">
    <%= ff.label :password_confirmation, "Confirmation" %><br />
    <%= ff.password_field :password_confirmation %>
  </div>
  <div class="actions">
    <%= ff.submit "Update" %>
  </div>
<% end %>

<div>
  <%= gravatar_for @user %>
  <a href="http://gravatar.com/emails">change</a>
</div>